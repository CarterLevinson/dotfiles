## aliases for shell builtins

alias cls=clear
alias quit=exit
alias q=exit
alias d='dirs -v'

# ls aliases
# alias ls='ls --color=auto --hyperlink=auto'
alias ls='ls --color=auto'
alias la='ls -a'
alias ll='ls -l'
alias lh='ls -d .?*'
alias lhl='ls -ld .?*'
alias lal='ls -al'
alias lll='ls -alsh'
alias exar='exa --long --binary --git --recurse --tree'
alias exa-list-max='exa --all --oneline --reverse --sort=size'
alias exa-list-recent='exa --all --oneline --sort=modified'
alias rg="rg --colors 'match:fg:magenta' --colors 'line:bg:yellow'"

