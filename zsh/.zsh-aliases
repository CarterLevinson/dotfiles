### ~/.zsh-aliases
### local $USER alaises

# program name aliases
alias ipy=ipython
alias ydl=youtube-dl
alias vbm=VBoxManage
alias md=glow
alias mdl=mdless
alias g=git
alias mutt=neomutt
alias termpdf=termpdf.py

alias v=$VISUAL
alias vi=$VISUAL
alias nv=$VISUAL
alias vim=$EDITOR
alias sc=/usr/bin/sc-im

alias open=$OPENER
alias nvim-profile='vim-startuptime -vimpath /usr/bin/nvim'
# argument aliases

# silent R
alias rad='radian --quiet --no-save'
alias R='R --quiet --no-save'

# use vi mode on all GNU documentation
alias info='info --vi-keys'
alias lynx='lynx -vikeys'

# open running syncthing instance through browser
alias syncbrowse='syncthing --browser-only'
alias sb=syncbrowse

## tabbed zathura
alias ztab='tabbed -c -r zathura -e id'
alias zt=ztab
